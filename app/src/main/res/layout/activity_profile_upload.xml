<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileUploadActivity">

    <LinearLayout
        android:background="#348F8F8F"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Title">
        <ImageView
            android:id="@+id/backButton"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="User Profile Change"
            android:textSize="30dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777777"
        android:layout_below="@id/Title"
        android:id="@+id/TitleLine"
        />
    <ScrollView
        android:layout_below="@id/TitleLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <ImageView
                android:background="@drawable/box_light_black"
                android:id="@+id/ImageToChange"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/previewimg"
                android:layout_marginBottom="20dp"

                />
            <Button
                android:id="@+id/btnUploadProfilePic"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upload"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_blue"
                android:layout_marginBottom="10dp"
                />
            <Button
                android:id="@+id/toToMainActivityByCancelButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancel"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:background="@drawable/button_cancel"

                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>